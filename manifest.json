{
  "manifest_version": 3,
  "name": "Smart MathCalc",
  "version": "1.0",
  "description": "A floating math calculator with WolframAlpha support.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": ["scripting"],
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}